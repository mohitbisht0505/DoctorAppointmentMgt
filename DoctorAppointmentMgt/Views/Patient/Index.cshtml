
@model List<Patient>
@{
    var name = TempData["name"];
}
<div class="container p-1">
    <div class="row p-1">
        <div class="col-12">
        <h3>Hello @name</h3>
        </div>

        <div class="col-6">
            <h2 class="text-primary">
                Patients
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">Add New Patient</a>
        </div>
    </div>
</div>
<form method="post">
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Id </th>
            <th> Patient Name </th>
            <th> Age </th>
            <th> Gender</th>
            <th> Address </th>
            <th> Phone No.</th>
            <th> Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.PatientId
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Age
                    </td>
                    <td>
                        @item.Gender
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.PhoneNo
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Password
                    </td>
                    <td>
                            <button class="btn btn-outline-warning" type="submit" asp-route-id="@item.PatientId" asp-controller="Patient" asp-action="Edit">Edit</button>
                        @*<button type="submit" value="Delete" class="btn btn-danger" asp-controller="Patient" asp-action="OnDelete">Delete</button>*@
                            <button type="submit" class="btn btn-outline-success" asp-route-id="@item.PatientId" asp-controller="Patient" asp-action="OnDelete">Delete</button>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No Data</td>
            </tr>
        }
    </tbody>
</table>
</form>
